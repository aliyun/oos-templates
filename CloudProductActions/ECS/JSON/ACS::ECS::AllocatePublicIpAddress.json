{
  "FormatVersion": "OOS-2019-06-01",
  "Description": {
    "name-ne": "ACS::ECS::AllocatePublicIpAddress",
    "name-zh-cn": "为ECS实例分配一个公网IP",
    "en": "Assigns a public IP address to ECS instance",
    "zh-cn": "为ECS实例分配一个公网IP地址"
  },
  "Parameters": {
    "regionId": {
      "Description": {
        "en": "The ID of region",
        "zh-cn": "地域ID"
      },
      "Type": "String",
      "Default": "{{ ACS::RegionId }}"
    },
    "instanceId": {
      "Description": {
        "en": "The ID of ECS instance",
        "zh-cn": "ECS实例ID"
      },
      "Type": "String",
      "MinLength": 1,
      "MaxLength": 30
    }
  },
  "Tasks": [
    {
      "Name": "checkInstanceReady",
      "Action": "ACS::CheckFor",
      "Description": {
        "en": "Check whether the ECS instance status is Running or Stopped",
        "zh-cn": "检查ECS实例是否处于运行中或已停止状态"
      },
      "Properties": {
        "Service": "ECS",
        "API": "DescribeInstances",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "InstanceIds": [
            "{{ instanceId }}"
          ]
        },
        "DesiredValues": [
          "Running",
          "Stopped"
        ],
        "PropertySelector": "Instances.Instance[].Status"
      }
    },
    {
      "Name": "allocatePublicIpAddress",
      "Action": "ACS::ExecuteAPI",
      "Description": {
        "en": "Assigns a public IP address to an instance",
        "zh-cn": "为一台ECS实例分配一个公网IP地址"
      },
      "Properties": {
        "Service": "ECS",
        "API": "AllocatePublicIpAddress",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "InstanceId": "{{ instanceId }}"
        }
      },
      "Outputs": {
        "ipAddress": {
          "Type": "String",
          "ValueSelector": "IpAddress"
        }
      }
    },
    {
      "Name": "rebootInstance",
      "Action": "ACS::ExecuteAPI",
      "Description": {
        "en": "Restarts the ECS instance",
        "zh-cn": "重启ECS实例"
      },
      "Properties": {
        "Service": "ECS",
        "API": "RebootInstance",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "InstanceId": "{{ instanceId }}"
        }
      }
    },
    {
      "Name": "untilInstanceReady",
      "Action": "ACS::WaitFor",
      "Description": {
        "en": "Waits for the ECS instance to enter the Running status",
        "zh-cn": "等待ECS实例到达运行中状态"
      },
      "Properties": {
        "Service": "ECS",
        "API": "DescribeInstances",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "InstanceIds": [
            "{{ instanceId }}"
          ]
        },
        "DesiredValues": [
          "Running"
        ],
        "PropertySelector": "Instances.Instance[].Status"
      }
    }
  ]
}