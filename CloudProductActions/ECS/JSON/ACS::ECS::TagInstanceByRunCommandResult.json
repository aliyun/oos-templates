{
  "FormatVersion": "OOS-2019-06-01",
  "Description": {
    "name-en": "ACS::ECS::TagInstanceByRunCommandResult",
    "name-zh-cn": "以执行执行云助手命令的结果为标签值为实例打标签",
    "en": "Tag a Linux ECS using RunCommand invocation result as tag value",
    "zh-cn": "以执行执行云助手命令的结果为标签值为实例打标签"
  },
  "Parameters": {
    "regionId": {
      "Description": {
        "en": "The ID of region",
        "zh-cn": "地域ID"
      },
      "Type": "String",
      "Default": "{{ ACS::RegionId }}"
    },
    "instanceId": {
      "Description": {
        "en": "Instance ID of the Linux ECS instance",
        "zh-cn": "Linux类型的实例的ID"
      },
      "Type": "String",
      "MaxLength": 30,
      "MinLength": 1
    },
    "tagKey": {
      "Description": {
        "en": "The tag key",
        "zh-cn": "标签键"
      },
      "Type": "String"
    },
    "commandContent": {
      "Description": {
        "en": "Command content to run in Linux ECS Instance",
        "zh-cn": "在linux类型实例中运行的云助手命令"
      },
      "Type": "String"
    },
    "OOSAssumeRole": {
      "Description": {
        "en": "The RAM role to be assumed by OOS",
        "zh-cn": "OOS扮演的RAM角色"
      },
      "Type": "String",
      "Default": "OOSServiceRole"
    }
  },
  "RamRole": "{{ OOSAssumeRole }}",
  "Tasks": [
    {
      "Name": "checkInstanceReady",
      "Action": "ACS::CheckFor",
      "Description": {
        "en": "Checks ECS instance is in the Running status",
        "zh-cn": "检查ECS实例是否处于运行中状态"
      },
      "Properties": {
        "Service": "ECS",
        "API": "DescribeInstances",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "InstanceIds": [
            "{{ instanceId }}"
          ]
        },
        "DesiredValues": [
          "Running"
        ],
        "PropertySelector": "Instances.Instance[].Status"
      }
    },
    {
      "Name": "queryInstanceCommandOutput",
      "Action": "ACS::ECS::RunCommand",
      "Description": {
        "en": "Invokes cloud assisant command and gets invocation output",
        "zh-cn": "执行云助手命令的并获取执行结果"
      },
      "Properties": {
        "regionId": "{{ regionId }}",
        "commandContent": "{{ commandContent }}",
        "instanceId": "{{ instanceId }}",
        "commandType": "RunShellScript"
      },
      "Outputs": {
        "commandOutput": {
          "Type": "String",
          "ValueSelector": "invocationOutput"
        }
      }
    },
    {
      "Name": "tagResources",
      "Action": "ACS::ExecuteApi",
      "Description": {
        "en": "Creates and attaches tag to ECS instance",
        "zh-cn": "创建标签并挂载到ECS实例"
      },
      "Properties": {
        "Service": "ECS",
        "API": "TagResources",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "ResourceIds": [
            "{{ instanceId }}"
          ],
          "ResourceType": "Instance",
          "Tags": [
            {
              "Key": "{{ tagKey }}",
              "Value": "{{ queryInstanceCommandOutput.commandOutput }}"
            }
          ]
        }
      }
    }
  ],
  "Outputs": {
    "tagValue": {
      "Type": "String",
      "Value": "{{ queryInstanceCommandOutput.commandOutput }}"
    }
  }
}