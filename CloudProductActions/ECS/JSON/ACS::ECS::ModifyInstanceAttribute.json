{
  "FormatVersion": "OOS-2019-06-01",
  "Description": {
    "name-en": "ACS::ECS::ModifyInstanceAttribute",
    "name-zh-cn": "修改ECS实例的属性",
    "en": "Modify the information of an ECS instance",
    "zh-cn": "修改ECS实例的属性"
  },
  "Parameters": {
    "instanceAttributes": {
      "Description": {
        "en": "The infos of the ECS instance",
        "zh-cn": "ECS实例信息"
      },
      "Type": "Json"
    },
    "instanceId": {
      "Description": {
        "en": "The ID of ECS instance",
        "zh-cn": "ECS实例ID"
      },
      "Type": "String"
    }
  },
  "Tasks": [
    {
      "Name": "modifyInstanceAttribute",
      "Action": "ACS::ExecuteApi",
      "Description": {
        "en": "Modifies the information of an ECS instance",
        "zh-cn": "修改ECS实例属性"
      },
      "Properties": {
        "Service": "ECS",
        "API": "ModifyInstanceAttribute",
        "Parameters": {
          "RegionId": {
            "Fn::Jq": [
              "First",
              ".[] | select(.instanceId == \"{{ instanceId }}\") | .regionId",
              "{{ instanceAttributes }}"
            ]
          },
          "InstanceId": "{{ instanceId }}",
          "HostName": {
            "Fn::Jq": [
              "First",
              ".[] | select(.instanceId == \"{{ instanceId }}\") | .hostName",
              "{{ instanceAttributes }}"
            ]
          },
          "InstanceName": {
            "Fn::Jq": [
              "First",
              ".[] | select(.instanceId == \"{{ instanceId }}\") | .instanceName",
              "{{ instanceAttributes }}"
            ]
          },
          "Description": {
            "Fn::Jq": [
              "First",
              ".[] | select(.instanceId == \"{{ instanceId }}\") | .description",
              "{{ instanceAttributes }}"
            ]
          }
        }
      }
    }
  ],
  "Outputs": {
    "instanceInfos": {
      "Type": "String",
      "Value": {
        "Fn::Jq": [
          "First",
          ".[] | select(.instanceId == \"{{ instanceId }}\")",
          "{{ instanceAttributes }}"
        ]
      }
    }
  }
}