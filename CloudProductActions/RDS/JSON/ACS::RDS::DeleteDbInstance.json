{
  "FormatVersion": "OOS-2019-06-01",
  "Description": {
    "name-en": "ACS::RDS::DeleteDbInstance",
    "name-zh-cn": "删除数据库实例",
    "en": "Deletes DB instance",
    "zh-cn": "删除数据库实例"
  },
  "Parameters": {
    "regionId": {
      "Description": {
        "en": "The ID of region",
        "zh-cn": "地域ID"
      },
      "Type": "String",
      "Default": "{{ ACS::RegionId }}"
    },
    "dBInstanceId": {
      "Description": {
        "en": "The ID of DB Instance that will be deleted",
        "zh-cn": "要删除的DB实例ID"
      },
      "Type": "String"
    }
  },
  "Tasks": [
    {
      "Name": "checkForInstanceReady",
      "Action": "ACS::CheckFor",
      "Description": {
        "en": "Check weather the DB Instance is running status",
        "zh-cn": "检查DB实例是否处于运行状态"
      },
      "Properties": {
        "Service": "RDS",
        "API": "DescribeDBInstances",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "DBInstanceId": "{{ dBInstanceId }}"
        },
        "DesiredValues": [
          "Running"
        ],
        "PropertySelector": "Items.DBInstance[].DBInstanceStatus"
      }
    },
    {
      "Name": "deleteDBInstance",
      "Action": "ACS::ExecuteAPI",
      "Description": {
        "en": "Deletes DB instance with the specified DBInstanceId",
        "zh-cn": "删除指定DBInstanceId的DB实例"
      },
      "Properties": {
        "Service": "RDS",
        "API": "DeleteDBInstance",
        "Risk": "Normal",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "DBInstanceId": "{{ dBInstanceId }}"
        }
      }
    },
    {
      "Name": "untilInstanceDeleting",
      "Action": "ACS::WaitFor",
      "Description": {
        "en": "Waits for DB instance to enter deleting status",
        "zh-cn": "等待DB实例进入删除状态"
      },
      "Properties": {
        "Service": "RDS",
        "API": "DescribeDBInstances",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "DBInstanceId": "{{ dBInstanceId }}"
        },
        "PropertySelector": "Items.DBInstance[].DBInstanceStatus",
        "NotDesiredValues": [
          "Deleting"
        ]
      }
    }
  ]
}