{
  "FormatVersion": "OOS-2019-06-01",
  "Description": {
    "name-en": "ACS::RDS::CreateDbInstance",
    "name-zh-cn": "创建RDS实例",
    "en": "Creates an RDS instance",
    "zh-cn": "创建一台RDS实例"
  },
  "Parameters": {
    "regionId": {
      "Description": {
        "en": "The ID of region",
        "zh-cn": "地域ID"
      },
      "Type": "String",
      "Default": "{{ ACS::RegionId }}"
    },
    "dBInstanceClass": {
      "Description": {
        "en": "The instance type (specifications)",
        "zh-cn": "实例类型(规格)"
      },
      "Type": "String"
    },
    "dBInstanceNetType": {
      "Description": {
        "en": "The network type of the instance, Internet or Intranet",
        "zh-cn": "实例的网络类型，Internet或Intranet"
      },
      "Type": "String"
    },
    "dBInstanceStorage": {
      "Description": {
        "en": "The storage capacity of the instance",
        "zh-cn": "实例的存储容量"
      },
      "Type": "String"
    },
    "engine": {
      "Description": {
        "en": "The engine type of the database",
        "zh-cn": "数据库的引擎类型"
      },
      "Type": "String"
    },
    "engineVersion": {
      "Description": {
        "en": "The version of the database",
        "zh-cn": "数据库的版本"
      },
      "Type": "String"
    },
    "payType": {
      "Description": {
        "en": "The billing method of the instance",
        "zh-cn": "实例的计费方法"
      },
      "Type": "String"
    },
    "securityIPList": {
      "Description": {
        "en": "The IP whitelist of the instance",
        "zh-cn": "实例的IP白名单"
      },
      "Type": "String"
    }
  },
  "Tasks": [
    {
      "Name": "createDBInstance",
      "Action": "ACS::ExecuteAPI",
      "Description": {
        "en": "Creates an RDS instance",
        "zh-cn": "创建一台RDS实例"
      },
      "Properties": {
        "Service": "RDS",
        "API": "CreateDBInstance",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "DBInstanceClass": "{{ dBInstanceClass }}",
          "DBInstanceNetType": "{{ dBInstanceNetType }}",
          "DBInstanceStorage": "{{ dBInstanceStorage }}",
          "Engine": "{{ engine }}",
          "EngineVersion": "{{ engineVersion }}",
          "PayType": "{{ payType }}",
          "SecurityIPList": "{{ securityIPList }}"
        }
      },
      "Outputs": {
        "dBInstanceId": {
          "Type": "String",
          "ValueSelector": "DBInstanceId"
        }
      }
    },
    {
      "Name": "untilInstanceReady",
      "Action": "ACS::WaitFor",
      "Description": {
        "en": "Waits for DB Instance to enter running status",
        "zh-cn": "等待DB实例进入运行状态"
      },
      "Properties": {
        "Service": "RDS",
        "API": "DescribeDBInstances",
        "Parameters": {
          "RegionId": "{{ regionId }}",
          "DBInstanceId": "{{ createDBInstance.dBInstanceId }}"
        },
        "DesiredValues": [
          "Running"
        ],
        "PropertySelector": "Items.DBInstance[].DBInstanceStatus"
      }
    }
  ],
  "Outputs": {
    "dBInstanceId": {
      "Type": "String",
      "Value": "{{ createDBInstance.dBInstanceId }}"
    }
  }
}